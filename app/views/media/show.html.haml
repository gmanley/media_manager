.page-header
  %h1=@media.name

%ul.snapshots
  - @media.snapshots.each do |snapshot|
    %li
      = image_tag(snapshot.image_url(:thumb))
      %p.timestamp=snapshot.formated_video_time

%ul.rslides_tabs.rslides1_tabs
  - @media.snapshots.each_with_index do |snapshot, i|
    %li
      = link_to '#', class: "rslides1_s#{i + 1}" do
        = image_tag(snapshot.image_url(:tiny))

%section
  %h3 Metadata
  .accordion
    - @media.file_metadata.each do |section_name, section_content|
      .accordion-group
        .accordion-heading
          %a.accordion-toggle{href: "##{section_name}Metadata", data: {toggle: 'collapse'}}
            %h4= section_name.titleize
          %div.collapse.accordion-body{id: "#{section_name}Metadata"}
            %ul.accordion-inner.unstyled.well
              - section_content.first.each do |k, v|
                %li <strong>#{k.titleize}</strong>: #{v}

